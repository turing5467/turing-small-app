/* pages/item/item.wxss */
.rune {
  background: #000 url(https://lol.qq.com/act/a20170926preseason/img/runeBuilder/assets/lines.png) repeat-y center center;
  
}
.icon, .border {
  width: 211px;
  height: 246px;
  animation: grad 5s 1s infinite;
}
.rune-item {
  position: relative;
  width: 211px;
  margin: 0 auto;
  
}
.border {
  position: absolute;
  top: 0;
  left: 0;
  
}
.name,.desc {
  text-align: center;
  position: absolute;
}
.name {
  color: #fff; 
  font-size: 24px;
  bottom: 30px;
  left: 0;
  right: 0;

}
.desc {
  color: #f4f4f4;
  font-size: 12px;
  bottom: 5px;
  left: 0;
  right: 0;
}
@keyframes grad{
  0%{
    opacity: 1;
  }
  50% {
    opacity: .7;
  }
  100% {
    opacity: 1;
  }
}